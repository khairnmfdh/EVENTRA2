<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Ilustrasi/logo atas -->

        <ImageView
            android:id="@+id/topHeaderBackground"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/top_circle_background" />

        <ImageView
            android:id="@+id/imgTopLogo"
            android:layout_width="280dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/logo" />

        <!-- Login Form -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgTopLogo"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dashboardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DASHBOARD"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="20dp" />


                <!-- Submit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDaftarD"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="DAFTAR"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#D69F88"
                    android:layout_marginTop="30dp"
                    app:cornerRadius="30dp"
                    app:elevation="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLoginD"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="MASUK"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:backgroundTint="#D69F88"
                    app:cornerRadius="30dp"
                    app:elevation="5dp" />

            </LinearLayout>
        </ScrollView>

        <!-- Ilustrasi bawah -->
        <ImageView
            android:id="@+id/imgBottomMascot"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:src="@drawable/logo_bottom" />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
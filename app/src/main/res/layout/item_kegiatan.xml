<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:layout_gravity="center"
    android:clipToPadding="false"
    android:layout_marginBottom="12dp"
    android:background="@drawable/rounded_bg"
    android:foreground="?android:attr/selectableItemBackground">


    <!-- Konten kegiatan -->
    <LinearLayout
        android:id="@+id/linearContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/btnHapus"
        android:layout_toLeftOf="@id/btnHapus"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp">


        <TextView
            android:id="@+id/tvNamaKegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kegiatan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />


        <TextView
            android:id="@+id/tvTanggalKegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE : YYYY-MM-DD"
            android:textSize="14sp"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />


        <TextView
            android:id="@+id/tvStatusKegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATUS : BELUM ABSEN"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FF8800" />
    </LinearLayout>


    <Button
        android:id="@+id/btnHapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hapus"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF4444"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>
